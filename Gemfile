   gem 'rack-test'
   gem 'rake'
   gem 'minitest'
   gem 'test-unit'
   gem 'selenium-webdriver'
   gem 'coveralls', require: false
   gem 'rspec'
   gem 'capybara'
end

group :production do
   gem 'sinatra-contrib'
end
